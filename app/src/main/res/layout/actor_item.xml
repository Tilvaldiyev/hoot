<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/specialist_item__parent"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginStart="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@color/background"
    app:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/actor_item__parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/actor_item__img"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/actor_item__fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/actor_item__img"
            android:paddingTop="5dp"
            android:text="Джет Ли"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/actor_item__rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:theme="@style/RatingBar"
            android:layout_toEndOf="@id/actor_item__img"
            android:layout_below="@+id/actor_item__fullname"/>

        <TextView
            android:id="@+id/actor_item__location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actor_item__rating"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/actor_item__img"
            android:text="Казахстан, Алматы"
            android:textColor="@color/gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/actor_item__age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actor_item__location"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/actor_item__img"
            android:textColor="@color/gray"
            android:text="30 лет" />

        <Button
            android:id="@+id/actor_item__fav_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_outline_favorite_border_24"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>