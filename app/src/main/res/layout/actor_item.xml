    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/cast_card_parent"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/actor_item_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_person_24" />

            <!-- Rectangle 2 -->
            <View
                android:id="@+id/actor_item_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@drawable/rectangle_gradient"
                app:cardCornerRadius="50dp">

            </View>

            <TextView
                android:id="@+id/actor_item_header__name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/actor_item_header__age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="3dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/actor_item__about_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:translationZ="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/actor_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/app_name"
                android:textColor="@color/primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/actor_item_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="@string/age"
                android:textColor="@color/primary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/actor_item_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/city"
                android:textColor="@color/primary"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/actor_item_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:textColor="@color/primary"
                android:textSize="13sp" />

            <Button
                android:id="@+id/actor_item_add_to_fav_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="50dp"
                android:bottomLeftRadius="50dp"
                android:bottomRightRadius="50dp"
                android:clickable="true"
                android:text="@string/add_to_fav"
                android:textColor="@color/white"
                android:topLeftRadius="50dp"
                android:topRightRadius="50dp"
                android:textSize="10sp"
                android:padding="0dp"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/actor_item_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="-90dp"
                android:bottomLeftRadius="50dp"
                android:bottomRightRadius="50dp"
                android:clickable="true"
                android:text="@string/respond_cancel"
                android:textColor="@color/white"
                android:topLeftRadius="50dp"
                android:topRightRadius="50dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/actor_item_invite_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:bottomLeftRadius="50dp"
                android:bottomRightRadius="50dp"
                android:clickable="true"
                android:text="@string/invite_cast"
                android:textColor="@color/white"
                android:topLeftRadius="50dp"
                android:topRightRadius="50dp"
                android:textSize="10sp"
                android:padding="0dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>