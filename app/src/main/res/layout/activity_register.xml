<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterActivity"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/activity_register__scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:id="@+id/activity_register__auth_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="130dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:textColor="@color/primary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Авторизационные данные"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/activity_register__login_field"
                    android:layout_height="wrap_content"
                    android:hint="Логин"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:textSize="15sp"
                    android:textColorHint="@color/primary"
                    android:textColor="@color/primary"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/activity_register__password_field"
                    android:layout_height="wrap_content"
                    android:hint="Пароль"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/primary"
                    android:textColor="@color/primary"
                    android:background="@drawable/edit_text"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/activity_register__password_repeat_field"
                    android:layout_height="wrap_content"
                    android:hint="Повторите пароль"
                    android:inputType="textPassword"
                    android:textColorHint="@color/primary"
                    android:textColor="@color/primary"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"/>

                <Spinner
                    android:id="@+id/activity_register__account_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColorHint="@color/primary"
                    android:textColor="@color/primary"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:background="@drawable/edit_text"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_register__personal_data_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="130dp"
                android:layout_below="@id/activity_register__auth_block">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02"
                    android:textColor="@color/primary"/>

                <TextView
                    android:layout_width="wrap_content"
