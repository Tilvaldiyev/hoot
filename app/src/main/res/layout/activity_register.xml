                    android:text="Личные данные"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/activity_register__surname_field"
                    android:layout_height="wrap_content"
                    android:hint="Фамилия"
                    android:inputType="text"
                    android:textColorHint="@color/primary"
                    android:textColor="@color/primary"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/activity_register__firstname_field"
                    android:layout_height="wrap_content"
                    android:hint="Имя"
                    android:inputType="text"
                    android:textColorHint="@color/primary"
                    android:textColor="@color/primary"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/activity_register__middlename_field"
                    android:layout_height="wrap_content"
                    android:hint="Отчество (при наличии)"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/primary"
                    android:textColor="@color/primary"
                    android:background="@drawable/edit_text"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"/>

